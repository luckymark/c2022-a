#include<stdio.h>
#include<stdlib.h>
#include<windows.h>
int main()
{
	int i,LENGTH=110,blank=1,time=30,change=1;
	while (1)
	{
		blank += change;
		if (blank == LENGTH || blank == 0)
		{
			change = -change;
		}
		for (i = 0; i <blank; i++)
		{
			printf(" ");
		}
		printf("let us run!");
		Sleep(time);
		system("cls");
	}
	return 0;
}
