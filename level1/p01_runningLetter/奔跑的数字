#define  _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
int main() {
	char word='c';
	int wide = 1;
	int loc = 1;
	while (1) {
		wide  += loc;
		if (wide == 0 || wide == 100) {
			loc = -loc;
		}
		for (int i = 0; i < wide; i++) {
			printf(" ");
		}
		printf("%c", word);
		system("cls");
	}
}
